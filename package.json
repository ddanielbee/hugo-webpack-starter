{
  "name": "hugo-webpack-starter",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch": "webpack --env=dev --progress --profile --colors --watch",
    "serve": "cd site && hugo server --buildDrafts",
    "dev": "concurrently --kill-others \"npm run watch\" \"npm run serve\"",
    "build:dev": "webpack --env=dev --progress --profile --colors",
    "build:prod": "webpack --env=prod --progress --profile --colors"
  },
  "dependencies": {
    "webpack": "2.6.1",
    "webpack-dev-middleware": "1.10.2"
  },
  "devDependencies": {
    "babel-core": "6.24.1",
    "babel-loader": "7.0.0",
    "babel-preset-env": "1.5.1",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "2.1.2",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2"
  }
}
